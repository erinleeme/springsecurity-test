<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.MemberMapper">
    <select id="selectMemberByEmail" parameterType="java.lang.String" resultType="com.example.demo.dao.MemberDAO">
        SELECT
        *
        FROM
        member
        WHERE
        email = #{email}
    </select>

    <insert id="createMember" parameterType="com.example.demo.dao.MemberDAO">
        insert into member(email, password, nickname, member_type, created_date, updated_date)
        values (#{email}, #{password}, #{nickname}, #{memberType}, now(), now())
    </insert>

    <update id="addRefreshToken" parameterType="java.util.Map">
        UPDATE member
        SET refresh_token = #{hashRefreshToken}
        WHERE email = #{email}
    </update>
</mapper>